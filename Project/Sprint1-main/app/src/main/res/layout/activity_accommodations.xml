<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/accommodations"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.AccommodationsActivity">

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btn_logistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_logistics"
            android:contentDescription="Logistics Screen" />

        <ImageButton
            android:id="@+id/btn_dest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_dest"
            android:contentDescription="Destination" />

        <ImageButton
            android:id="@+id/btn_dining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_dining"
            android:contentDescription="Dining Establishments" />

        <ImageButton
            android:id="@+id/btn_accom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ABA2A2"
            android:src="@drawable/ic_accommodation"
            android:contentDescription="Accomodations" />

        <ImageButton
            android:id="@+id/btn_transport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_transport"
            android:contentDescription="Transportation" />

        <ImageButton
            android:id="@+id/btn_travel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_travel"
            android:contentDescription="Travel Community" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>