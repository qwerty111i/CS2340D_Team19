<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/logistics"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/destination_background"
    tools:context=".view.LogisticsActivity">

    <TextView
        android:id="@+id/travel_community_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logistics"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/merriweather_black"/>



    <Button
        android:id="@+id/alloted_vs_planned"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Allotted vs. Planned"
        android:textSize="23sp"
        android:fontFamily="@font/poppins_regular"
        app:backgroundTint="@color/modern_blue"
        app:shapeAppearance="@style/ShapeAppearance.Material3.Corner.Medium"
        app:layout_constraintWidth_percent="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.08"
        app:layout_constraintTop_toBottomOf="@id/travel_community_text"
        />

    <TextView
        android:id="@+id/contributors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contributors"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alloted_vs_planned" />

    <ImageButton
        android:id="@+id/button_notes"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="60dp"
        android:backgroundTint="@color/modern_blue"
        android:src="@drawable/add_notes"
        android:contentDescription="add notes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cornerRadius="10dp" />


    <ImageButton
        android:id="@+id/button_invite"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/modern_blue"
        android:src="@drawable/people_invite"
        android:contentDescription="Invite Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="10dp"
    />


    <!-- LinearLayout to hold dynamic invited user cards -->
    <LinearLayout
        android:id="@+id/invited_users_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:text="Invited User"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contributors" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btn_logistics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ABA2A2"
            android:src="@drawable/ic_logistics"
            android:contentDescription="Logistics Screen" />

        <ImageButton
            android:id="@+id/btn_dest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_dest"
            android:contentDescription="Destination" />

        <ImageButton
            android:id="@+id/btn_dining"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_dining"
            android:contentDescription="Dining Establishments" />

        <ImageButton
            android:id="@+id/btn_accom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_accommodation"
            android:contentDescription="Accomodations" />

        <ImageButton
            android:id="@+id/btn_transport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_transport"
            android:contentDescription="Transportation" />

        <ImageButton
            android:id="@+id/btn_travel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_travel"
            android:contentDescription="Travel Community" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
