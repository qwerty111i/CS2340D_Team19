<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dining"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DiningActivity">

    <TextView
        android:id="@+id/dining_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Dining Screen"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/merriweather_black"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background"
        app:tabMode="fixed"
        app:tabIconTint="@color/tab_color"
        app:tabIndicatorColor="@color/tab_indicator"
        app:tabIndicatorHeight="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/dining_title"
        app:layout_constraintBottom_toTopOf="@id/tab_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>